{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "cssPriority": "application",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "layer-shell": true,

  "control-center-layer": "top",
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "control-center-width": 500,
  "control-center-height": 600,

  "notification-2fa-action": false,
  "notification-inline-replies": false,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,

  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,

  "fit-to-screen": true,
  "relative-timestamps": true,
  "notification-window-width": 500,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,

  "scripts": {},
  "notification-visibility": {},
  "widgets": [
    "title",
    "inhibitors",
    "notifications",
    "mpris",
    "volume",
    "buttons-grid"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "󰎟",
      "clear-all-button": true
    },
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "󰎟"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12
    },
    "volume": {
      "label": "",
      "show-per-app": true,
      "show-per-app-icon": true,
      "show-per-app-label": true,
      "expand-button-label": "",
      "collapse-button-label": ""
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "",
          "type": "toggle",
          "command": "sh -c '[[ $(warp-cli status | grep Connected) ]] && warp-cli disconnect || warp-cli connect'",
          "update-command": "sh -c '[[ $(warp-cli status | grep Connected) ]] && echo true || echo false'"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "sh -c '[[ $(pidof wl-screenrec) ]] && pkill wl-screenrec || /home/lufimio/.config/hypr/hypr/scripts/hyprecord -m window -a \"alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__Speaker__sink\"'",
          "update-command": "sh -c '[[ $(pidof wl-screenrec) ]] && echo true || echo false'"
        },
        {
          "label": "󰄀",
          "type": "button",
          "command": "hyprshot -m region"
        },
        {
          "label": "󰍶",
          "type": "toggle",
          "command": "sh -c 'swaync-client -d'",
          "update-command": "sh -c 'swaync-client -D'"
        },
        {
          "label": "",
          "type": "toggle",
          "command": "sh -c 'swayosd-client --input-volume mute-toggle'",
          "update-command": "sh -c '[[ $(pactl list sources | grep -A 10 $(pactl info | grep \"Default Source\" | cut -f3 -d\" \") | grep \"Mute: yes\") ]] && echo true || echo false'"
        }
      ]
    }
  }
}
