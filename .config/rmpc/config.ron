#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    address: "/home/lufimio/.mpd/socket",
    password: None,
    theme: "catppuccin_mocha",
    cache_dir: "/home/lufimio/.cache/rmpc/",
    lyrics_dir: "/home/lufimio/Music/",
    on_song_change: ["~/.config/rmpc/utils/increment_play_count"],
    volume_step: 5,
    max_fps: 60,
    scrolloff: 5,
    wrap_navigation: true,
    enable_mouse: true,
    enable_config_hot_reload: true,
    status_update_interval_ms: 1000,
    rewind_to_start_sec: None,
    reflect_changes_to_playlist: false,
    select_current_song_on_change: true,
    center_current_song_on_change: true,
    browser_song_sort: [Title, Artist, Disc, Track],
    directories_sort: SortFormat(group_by_type: true, reverse: false),
    album_art: (
        method: Auto,
        max_size_px: (width: 1200, height: 1200),
        disabled_protocols: ["http://", "https://"],
        vertical_align: Center,
        horizontal_align: Center,
    ),
    cava: (
        input: (
            method: Fifo,
            source: "/tmp/mpd.fifo",
            sample_rate: 44100,
            channels: 2,
            sample_bits: 16,
        ),
    ),
    keybinds: (
        global: {
            ",":       VolumeDown,
            ".":       VolumeUp,
            "}":       SeekForward,
            "{":       SeekBack,

            "?":       ShowHelp,
            ":":       CommandMode,
            "q":       Quit,
            "<Tab>":   NextTab,
            "<S-Tab>": PreviousTab,
            "1":       SwitchToTab("Song"),
            "2":       SwitchToTab("Directories"),
            "3":       SwitchToTab("Playlists"),
            "4":       SwitchToTab("Search"),

            ">":       NextTrack,
            "<":       PreviousTrack,
            "p":       TogglePause,
            "S":       Stop,

            "z":       ToggleRepeat,
            "x":       ToggleRandom,
            "c":       ToggleConsume,
            "v":       ToggleSingle,

            "u":       Update,
            "U":       Rescan,

            "!":       ShowCurrentSongInfo,
            "R":       AddRandom,
        },
        navigation: {
            "k":         Up,
            "j":         Down,
            "h":         Left,
            "l":         Right,
            "<Up>":      Up,
            "<Down>":    Down,
            "<Left>":    Left,
            "<Right>":   Right,

            "<C-k>":     PaneUp,
            "<C-j>":     PaneDown,
            "<C-h>":     PaneLeft,
            "<C-l>":     PaneRight,

            "<C-u>":     UpHalf,
            "<C-d>":     DownHalf,

            "/":         EnterSearch,
            "n":         NextResult,
            "N":         PreviousResult,

            "a":         AddOptions(kind: Action(all: false, autoplay: None, position: EndOfQueue)),
            "A":         AddOptions(kind: Action(all: true, autoplay: None, position: EndOfQueue)),
            "i":         AddOptions(kind: Action(all: false, autoplay: None, position: AfterCurrentSong)),
            "I":         AddOptions(kind: Action(all: true, autoplay: None, position: AfterCurrentSong)),
            "o":         AddOptions(kind: Modal([
                            ("Start of queue and play", (all: false, autoplay: HoveredOrFirst, position: StartOfQueue)),
                            ("Start of queue", (all: false, autoplay: None, position: StartOfQueue)),
                            ("End of queue and play", (all: false, autoplay: HoveredOrFirst, position: EndOfQueue)),
                            ("End of queue", (all: false, autoplay: None, position: EndOfQueue)),
                            ("Before current song and play", (all: false, autoplay: HoveredOrFirst, position: BeforeCurrentSong)),
                            ("Before current song", (all: false, autoplay: None, position: BeforeCurrentSong)),
                            ("After current song and play", (all: false, autoplay: HoveredOrFirst, position: AfterCurrentSong)),
                            ("After current song", (all: false, autoplay: None, position: AfterCurrentSong)),
                            ("Replace queue and play", (all: false, autoplay: HoveredOrFirst, position: Replace)),
                            ("Replace queue", (all: false, autoplay: None, position: Replace)),
                        ])),
            "O":         AddOptions(kind: Modal([
                            ("Start of queue and play", (all: true, autoplay: HoveredOrFirst, position: StartOfQueue)),
                            ("Start of queue", (all: true, autoplay: None, position: StartOfQueue)),
                            ("End of queue and play", (all: true, autoplay: HoveredOrFirst, position: EndOfQueue)),
                            ("End of queue", (all: true, autoplay: None, position: EndOfQueue)),
                            ("Before current song and play", (all: true, autoplay: HoveredOrFirst, position: BeforeCurrentSong)),
                            ("Before current song", (all: true, autoplay: None, position: BeforeCurrentSong)),
                            ("After current song and play", (all: true, autoplay: HoveredOrFirst, position: AfterCurrentSong)),
                            ("After current song", (all: true, autoplay: None, position: AfterCurrentSong)),
                            ("Replace queue and play", (all: true, autoplay: HoveredOrFirst, position: Replace)),
                            ("Replace queue", (all: true, autoplay: None, position: Replace)),
                        ])),

            "K":         MoveUp,
            "J":         MoveDown,
            "<A-k>":     MoveUp,
            "<A-j>":     MoveDown,

            "g":         Top,
            "G":         Bottom,
            "<Space>":   Select,
            "<C-Space>": InvertSelection,
            "<CR>":      Confirm,
            "<C-c>":     Close,
            "<Esc>":     Close,
            "r":         Rename,
            "D":         Delete,
            "B":         ShowInfo,
        },
        queue: {
            "D":       DeleteAll,
            "<CR>":    Play,
            "<C-s>":   Save,
            "a":       AddToPlaylist,
            "d":       Delete,
            "C":       JumpToCurrent,
            "X":       Shuffle,
        },
    ),
    search: (
        case_sensitive: false,
        mode: Contains,
        tags: [
        (value: "any",         label: "Any Tag"),
        (value: "artist",      label: "Artist"),
        (value: "album",       label: "Album"),
        (value: "albumartist", label: "Album Artist"),
        (value: "title",       label: "Title"),
        (value: "filename",    label: "Filename"),
        (value: "genre",       label: "Genre"),
        ],
    ),
    tabs: [
        (
            name: "Current",
            pane: Split(
                direction: Vertical,
                panes: [
                    (size: "60%", pane: Split(
                        direction: Horizontal,
                        panes: [
                            (size: "35%", pane: Pane(AlbumArt)),
                            (size: "65%", pane: Pane(Queue)),
                        ]
                    )),
                    (size: "40%", borders: "ALL", pane: Split(
                        direction: Horizontal,
                        panes: [
                            (size: "35%", pane: Pane(Lyrics)),
                            (size: "65%", pane: Pane(Cava))
                        ]
                    ))
                ]
            )
        ),
        (name: "Music", pane: Pane(Directories)),
        (name: "Playlists", pane: Pane(Playlists)),
        (name: "Search", pane: Pane(Search)),
    ],
)

